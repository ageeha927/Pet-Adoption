<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>
    <!-- Menu Overlay -->
    <div class="menu-overlay"></div>

    <!-- Side Menu -->
    <div class="side-menu">
        <div class="menu-header">
            <img src="/noProfilePhoto.png" alt="Profile" class="menu-profile-image">
            <div class="menu-profile-info">
                <div class="menu-profile-name">Guest User</div>
                <div class="menu-profile-email">guest@example.com</div>
            </div>
        </div>
        
        <nav class="menu-items">
            <a href="#" class="menu-item">
                <div class="menu-item-icon">üè†</div>
                Home
            </a>
            <a href="/display" class="menu-item">
                <div class="menu-item-icon">üêæ</div>
                All Pets
            </a>
            <a href="/uploadPet" class="menu-item">
                <div class="menu-item-icon">üìù</div>
                Upload A Pet
            </a>
            <a href="/user" class="menu-item">
                <div class="menu-item-icon">‚öôÔ∏è</div>
                Login
            </a>
        </nav>
    </div>

    <!-- Header -->
    <div class="header">
        <button class="menu-button">‚ò∞</button>
        <img src="/noProfilePhoto.png" alt="profile" class="profile-image">
    </div>

    <!-- Search -->
    <div class="search-container">
        <form action="/display" method="POST">
            <input type="text" name="searchBar" placeholder="Search.." required>    
            <button type="submit">
                <img id="submit" src="/search.png" alt="search">
            </button>    
        </form>
    </div>

    <% if (pets && pets.length > 0) { %>
    <div id="petContainer">
        <% pets.forEach(pet => { %>
            <div class="pet-card" onclick="goToPetProfile('<%= pet._id %>')">
                <img src="/api/placeholder/400/300" alt="<%= pet.name %>">
                <div class="pet-info">
                    <h2 class="pet-name">
                        <%= pet.name %>
                        <span class="gender-icon">
                            <% if (pet.gender === 'Male') { %>
                                <img class="Mgender" src="/maleIcon.png" alt="male">
                            <% } else { %>
                                <img class="Fgender" src="/femaleIcon.png" alt="female">
                            <% } %>
                        </span>
                    </h2>
                    <p><%= pet.description %></p>
                </div>
            </div>
        <% }); %>
    </div>
    <% } else { %>
        <p>No pets found.</p>
    <% } %>

    <script>
        function goToPetProfile(petId) {
            window.location.href = `/petProfile?id=${petId}`;
        }

        // Menu toggle functionality (if needed)
        document.querySelector('.menu-button')?.addEventListener('click', function() {
            document.querySelector('.side-menu').classList.toggle('active');
            document.querySelector('.menu-overlay').classList.toggle('active');
        });

        document.querySelector('.menu-overlay')?.addEventListener('click', function() {
            document.querySelector('.side-menu').classList.remove('active');
            document.querySelector('.menu-overlay').classList.remove('active');
        });
    </script>
</body>
</html>